<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PoPay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/cyber_yellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/onyx</item>
        <item name="colorSecondaryVariant">@color/granite</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="colorOnSurface">@color/granite</item>
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PoPay.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PoPay.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PoPay.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>